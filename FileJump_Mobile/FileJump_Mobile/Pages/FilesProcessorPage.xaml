<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FileJump_Mobile.Pages.FilesProcessorPage"
             BackgroundColor="#5c5c5c">



    <StackLayout Margin="5, 100, 5, 5">

        <Label x:Name="label_AviableDevices"
               Margin="0, 30, 0, 0"
               HorizontalOptions="Center"
               FontSize="16"
               FontAttributes="Bold"
               FontFamily="Arial"
               Text=""
               TextColor="White"
               >

        </Label>

        <Frame BorderColor="Wheat" HeightRequest="140" Margin="0, 30, 0, 5" BackgroundColor="#afafaf">


            <ScrollView x:Name="DeviceScrollView" 
                        Orientation="Horizontal"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    HeightRequest="140">

                <StackLayout x:Name="DevicesStackLayout"
                         Margin="0, 0, 0, 0"
                         Padding="0, 0,0 ,0"
                Orientation="Horizontal">



                </StackLayout>
            </ScrollView>

        </Frame>

        <Button x:Name="btn_RefreshDevices"
                Text="REFRESH"
                HeightRequest="80">

        </Button>


    </StackLayout>
</ContentPage>